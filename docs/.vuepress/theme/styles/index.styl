}

iframe {
  margin: auto;
  display:block;
    margin-bottom: 40px;
    width: 100% !important;
}

.center_nav_container {
    width: 70%;
  margin: auto;
  }

.logo_container {
  margin-top: 50px;
  }

  .nav_container {
  padding: 0;
   margin-top: 30px;
   margin-bottom: 150px;
  }

  aside {
  width: 450px;
  position: fixed;
  z-index: 10;
  margin: 0;
  top: 0;
  left: 0;
  border-right: 1px solid #eaecef;
  overflow-y: scroll;
  height: 100%;
  }

.CC_license {
  padding-top: 130px;}

  main { 
    padding-left: 450px;

  }

.main_content_container {
  width: 680px;
  margin: 0 auto;
  padding-top: 50px;
  }

  @media screen and (max-width: 1200px) {
  .main_content_container {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
  }
}


/*add important to catch missing inline overriding styles*/
img {
    display: block !important;
  margin-left: auto !important;
  margin-right: auto !important;
    margin-bottom: 60px !important;
max-height: 300px !important;
max-width: 90% !important;
  }

  figure {
    margin-bottom: 40px;
  }

table {
  border-collapse: collapse;
  width: 90%;
  margin: 0 auto;
    margin-bottom: 40px;
}

th {
  border-bottom: 1px solid black;
  padding: 15px;
}





a {
  text-decoration: none;
  color: #de01d6;

}

