@import url('https://fonts.googleapis.com/css?family=Lora:400|Playfair+Display:800,400&display=swap');


body {
  font-family: 'Lora';
}

.center_text {
  text-align: center;
}

p{
  font-size: 16px;
  line-height: 1.8;
  margin-bottom: 40px;
}

li {
    font-size: 16px;
    margin-bottom: 6px;
  line-height: 1.8;
}


h1,h2,h3,h4,h5,h6 {
  font-family: 'Playfair Display';
  letter-spacing: 0.5px;
}

h1 {
  font-size: 50px;
  margin-bottom: 90px;
  line-height: 1.1;
  text-align: center;
}


h2 {
  font-size: 40px;
    margin: 0;
    padding: 0;
      margin-top: 80px;
  margin-bottom: 45px;
      font-weight: 400;
}


h3 {
  font-size: 25px;
  margin-top: 40px;
  margin-bottom: 25px;
  font-weight: 400;
}

iframe {
  margin: auto;
  display:block;
    margin-bottom: 40px;
}


.logo_container {
  width: 70%;
  margin: auto;
  margin-top: 50px;
  }

  .sidebar_nav_container {
  padding: 0;
  width: 70%;
  margin: auto;
   margin-top: 30px;
   margin-bottom: 150px;
  }

  aside {
  width: 470px;
  position: fixed;
  z-index: 10;
  margin: 0;
  top: 0;
  left: 0;
  border-right: 1px solid #eaecef;
  overflow-y: auto;
  height: 100%;
  }

  main { 
    padding-left: 470px;
    padding-bottom: 40px;
  }

.main_content_container {
  width: 680px;
  margin: 0 auto;
  padding-top: 50px;
  }

  @media screen and (max-width: 1200px) {
  .main_content_container {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
  }
}



img {
    display: block;
  margin-left: auto;
  margin-right: auto;
    margin-bottom: 60px;
max-height: 300px;
max-width: 90%;


  }

table {
  border-collapse: collapse;
  width: 90%;
  margin: 0 auto;
    margin-bottom: 40px;
}

th {
  border-bottom: 1px solid black;
  padding: 15px;
}

.logo_text {

  font-size: 50px;
  font-weight: 800;
    line-height: 1.1;
  padding: 0;
  margin: 0;
  font-family: 'Playfair Display'
  }



a {
  text-decoration: none;
  color: #de01d6;

}

a:hover  {
     text-decoration: underline;
     color: #de01d6;
}

.header-anchor {
  color: black;}

.underline_span {
  color: black;}

.hitbox_span:hover .underline_span {
  color: #de01d6;
  text-decoration: underline;
   }

.router-link-active .hitbox_span .underline_span  {
     text-decoration: underline;
    color: #de01d6;
  }

.nav_section {
   list-style-type: none;
  }

  .nav_header{
    padding: 0;
    margin: 0;
    margin-bottom: 10px;
    font-size: 25px;

    font-family: 'Playfair Display';
    }


    .nav_item{
      margin: 0;
      padding: 0;

      }

.hitbox_span {
      padding-left: 10px;
      padding-top: 5px;
      padding-bottom: 5px;
      display:block;
}