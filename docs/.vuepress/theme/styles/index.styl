body {
  font-family: 'Lora';
}

.center_text {
  text-align: center;
}

input {
  border: 0;
  border-bottom: 2px solid black;
   width: 100%;
   margin-top: 70px;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 16px;
    font-family: 'Lora';
}

input:focus{
  border-bottom: 2px solid #de01d6;
  color: #de01d6;
}

audio {
  width: 100%;
}

p{
  font-size: 16px;
  line-height: 1.8;
  margin-bottom: 40px;
}

li {
    font-size: 16px;
    margin-bottom: 6px;
    padding-left: 5px;
  line-height: 1.8;
}
.logo_text {

  font-size: 50px;
  font-weight: 800;
    line-height: 1.1;
